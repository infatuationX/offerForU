/* pages/user/user.wxss */
/* 个人背景 */
.profile_background{
  width: 100%;
  height: 272rpx;
  position: fixed;
  top:0;
}

/* 个人头像 */
.user_profile_photo{
  width: 166rpx;
  height: 166rpx;
  position: fixed;
  top: 188rpx;
  left: 94rpx;
  border-radius: 50%;
  overflow: hidden;
}

/* 昵称 */
.user_profile_nickname{
  position: fixed;
  top: 370rpx;
  left: 94rpx;
  font-size: 36rpx;
}

/* 占位块 */
.white_block{
  height: 510rpx;
}

/* 待处理信息数字 */

.message_number{
  background-color: #03A7F0;
  color: white;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  position: absolute;
  right: 136rpx;
  top:520rpx;
}

.inline{
  display: inline-block;
  vertical-align: middle;
}

/* 我的预约 */
.my_order{
  font-size: 28rpx;
  margin-left: 94rpx;
}
/* 更多图标 */
.more_icon{
  width: 22rpx;
  height: 22rpx;
}

.more_icon_style{
  position: absolute;
  right: 96rpx;
}


/* 边界 */
.border{
  margin: 40rpx 90rpx;
  border: 1px solid #F3F3F3;
}

/* 在线客服按钮 */
.contact_button{
  font-size: 28rpx;
  background-color: white;
  width: 538rpx;
  display: flex;
  justify-content: left;
  padding-left: 0;
  height: 44.38rpx;
  line-height: 44.38rpx;
}

.contact_button::after{
  border: none;
}