/* pages/supervisor/supervisor.wxss */

page {
  background-color: #f7f7f7;
}

/* 搜索框 */

.searchbox {
  background-color: white;
  height: 64rpx;
  width: 558rpx;
  padding: 0 20rpx;
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
}

.search_item {
  display: inline-block;
  vertical-align:top;
} 

/* 搜索按钮 */

.search_button {
  height: 64rpx;
  width: 72rpx;
  border: 0;
  border-radius: 0;
  padding: 0;
}

/* 搜索按钮图片 */

.button_image {
  height: 64rpx;
  width: 72rpx;
}

.search_button::after {
  border: none;
}

/* 搜索框placeholder文字 */

.searchbox_placeholder {
  font-size: 28rpx;
  color: #888;
}

/* 搜索框总样式 */

.search_all {
  background-color: #f7f7f7;
  z-index:20;
}

/* 搜索框左右间距 */

.search_style {
  margin: 12rpx 40rpx 12rpx 40rpx;
}

/* 检索框 */

.filter {
  display: table;
  width: 100%;
  z-index: 20;
}

.filter2 {
  display: table;
  width: 100%;
  z-index: 20;
  margin-bottom: 14rpx;
}


.filter_title {
  display: table-cell;
  text-align: center;
  font-size: 28rpx;
}

/* 向下三角 */

.triangle_down {
  display: inline-block;
  position: relative;
  top: 6rpx;
  margin-left: 10rpx;
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-top-color: #b2b2b2;
}

/* 向上三角 */

.triangle_up {
  display: inline-block;
  position: relative;
  bottom: 6rpx;
  margin-left: 10rpx;
  width: 0;
  height: 0;
  border: 10rpx solid transparent;
  border-bottom-color: #b2b2b2;
}

