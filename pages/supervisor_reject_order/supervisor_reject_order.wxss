/* pages/supervisor_reject_order/supervisor_reject_order.wxss */
.pic{
  width: 190rpx;
  height: 146rpx;
  border-radius: 5px;
}

.inline{
  display: inline-block;
}

/* 详情头部 */
.head{
  margin-left: 80rpx;
  margin-top: 54rpx;
}
/* 文字图片间距 */
.head_words{
  margin-left: 28rpx;
}

/* 详情标题 */
.info_title{
  font-size: 28rpx;
  font-weight: bold;
}

/* 导师名字 */
.info_name{
  font-size: 24rpx;
  margin-top: 10rpx;
  font-weight: bold;
}

/* 导师经验 */
.info_exp{
  font-size: 20rpx;
  color: #888888;
}

/* 导师报价 */
.info_price{
  font-size: 20rpx;
  margin-top: 14rpx;
  color: #888888;
}

/* 边界 */
.border{
  margin: 40rpx 80rpx;
  border: 1px solid #F3F3F3;
}

/* 需求 */
.need{
  margin: 0 80rpx;
}

.need_title{
  font-size: 28rpx;
  font-weight: bold;
}

.need_detail{
  font-size: 24rpx;
  color: #565656;
  margin-top: 16rpx;
}

.time_note{
  font-size: 20rpx;
  font-weight: normal;
  color: #B2B2B2;
}

.filter_item {
  font-size: 24rpx;
  margin-top: 20rpx;
}

/* 重写单选框 */

.radio_rewrite .wx-radio-input{
  width: 28rpx;
  height: 28rpx;
  border-radius: 5px;
}

.radio_rewrite .wx-radio-input.wx-radio-input-checked{
  background-color: #03a7f0;
  color: white;
  border: 2rpx solid transparent;
}

/* 提供时间框 */
.textarea_style{
  height: 180rpx;
  padding: 12rpx 24rpx;
  background-color: #F7F7F7;
  width: 542rpx;
  font-size: 28rpx;
}

.textarea{
  margin-top: 20rpx;
}

.placeholder_style{
  font-size: 24rpx;
  color: #B2B2B2;
}

/* 实付款 */
.payment{
  font-size: 24rpx;
  color: #888888;
}
/* 点分割线 */
.point_small{
  border-radius: 50%;
  height: 5rpx;
  width: 5rpx;
  background-color: #888888;
  display: inline-block;
  vertical-align: middle;
  margin-left: 5rpx;
}

.submit_button{
  margin-top: 40rpx;
  color: white;
  background-color: #03A7F0;
}