/* pages/user_order/user_order.wxss */
/* 状态栏 */
.status_bar{
  display: table;
  width: 100%;
  position: fixed;
  top:0;
  background-color: #F7F7F7;
  z-index: 999;
}

.status_bar_item{
  display: table-cell;
  justify-content: center;
  align-items: center;
  text-align: center;
  vertical-align: middle;
  height: 80rpx;
  font-size: 28rpx;
}
/* 状态栏选中 */
.status_bar_item_selected{
  color: #03A7F0;
  border-bottom: 4rpx solid #03A7F0;
}


.block{
  height: 80rpx;
}

/* 图片 */
.pic{
  width: 190rpx;
  height: 146rpx;
  border-radius: 5px;
}

.inline{
  display: inline-block;
}

/* 详情头部 */
.head{
  margin-left: 80rpx;
  margin-top: 54rpx;
}
/* 文字图片间距 */
.head_words{
  margin-left: 28rpx;
}

/* 详情标题 */
.info_title{
  font-size: 28rpx;
  font-weight: bold;
}

/* 导师名字 */
.info_name{
  font-size: 24rpx;
  margin-top: 10rpx;
  font-weight: bold;
}

/* 导师经验 */
.info_exp{
  font-size: 20rpx;
  color: #888888;
}

/* 导师报价 */
.info_price{
  font-size: 20rpx;
  margin-top: 14rpx;
}

/* 编号 */
.info_num{
  font-size: 20rpx;
  margin-top: 14rpx;
  color: #888888;
}
/* 边界 */
.border{
  margin: 40rpx 80rpx;
  border: 1px solid #F3F3F3;
}

/* 详情图标 */

.more_icon{
  height: 26rpx;
  width: 26rpx;
}

.more_icon_style{
  vertical-align: top;
  margin-top: 60rpx;
  margin-left: 30rpx;
}

/* 没有订单 */
.order_zero{
  position: fixed;
  width: 100%;
  height: 100%;
  color: #888888;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  vertical-align: middle;
}