/* pages/supervisor_info/supervisor_info.wxss */
/* 个人背景 */
.profile_background{
  width: 100%;
  height: 272rpx;
  position: fixed;
  top:0;
}

/* 头像 */
.profile_photo{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
} 

/* 头像对齐 */
.profile_photo_style{
  position: fixed;
  left: 0;
  right: 0;
  top:200rpx;
  text-align: center;
  z-index: 100;
}

/* 导师名字 */
.profile_name{
  font-size: 40rpx;
}
/* 关键词 */
.profile_key{
  font-size: 24rpx;
  color: #888888;
  margin-top: 10rpx;
}

/* 导师名字白色背景 */
.profile_bg{
  background-color: white;
  padding-bottom: 24rpx;
}

/* 白色遮挡块 */
.white_block{
  position: fixed;
  height: 200rpx;
  width: 100%;
  top:272rpx;
  background-color: white;
}

/* 占位块 */
.placeholder_block{
  height: 520rpx;
}

/* 长介绍 */
.profile_info{
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 24rpx;
  margin: 0 70rpx;
  padding-bottom: 24rpx;
  border-bottom: 1px solid #F3F3F3;
}

/* 评分 */
.rank{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.rank_item{
  display: inline-block;
  font-size: 24rpx;
  width: 250rpx;
  margin-top: 10rpx;
}
.rank_all{
  margin: 18rpx 0rpx;
}

/* 评分星星 */
.star{
  width: 24rpx;
  height: 24rpx;
}

.star_style{
  display: inline-block;
}

/* 分割线 */
.border{
  margin: 28rpx 70rpx;
  border-bottom: 1px solid #F3F3F3;
}

/* 指导时间标题 */
.time_title{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 26rpx;
  font-size: 28rpx;
  font-weight: bold;
}
/* 指导时间样式 */

.time{
  display: flex;
  width: 100%;
  margin: 14rpx 70rpx;
}
.time_item{
  display: inline-block;
  font-size: 24rpx;
  margin-right: 40rpx;
}

/* 指导项目图片 */
.guidance_pic{
  width: 174rpx;
  height: 134rpx;
  border-top-left-radius: 5px;
}

/* 指导文字 */
.guidance_item{
  display: inline-block;
}

.guidance_detail{
  display: inline-block;
}

/* 指导项目标题 */
.guidance_detail_title{
  font-size: 24rpx;
  font-weight: bold;
}
/* 行业 */
.guidance_detail_type{
  font-size: 20rpx;
}
/* 报价 */
.guidance_detail_price{
  font-size: 20rpx;
  color: #03A7F0;
  margin-left: 100rpx;
}

/* 总样式 */
.guidance_detail_all{
  vertical-align: middle;
  align-items: center;
  display: flex;
  margin: 14rpx 70rpx 0 70rpx;
  background-color: #F3F3F3;
  border-top-right-radius: 5px;
}

.guidance_detail_style{
  margin-left: 24rpx;
}

/* 更多箭头 */
.more{
  width: 26rpx;
  height: 26rpx;
  margin-left: 56rpx;
}

/* 预约按钮 */
.book_button{
  margin: 0rpx 70rpx;
  border-radius: 0;
  color: white;
  background-color: #03A7F0;
  height: 66rpx;
  line-height: 66rpx;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
  font-size: 28rpx;
}

.book_button::after{
  border: none;
}

/*  */
.guidance{

}

.bottom_text{
  margin-top: 32rpx;
  height: 70rpx;
  text-align: center;
  display: flex;
  font-size: 24rpx;
  color: #B2B2B2;
  justify-content: center;
}

